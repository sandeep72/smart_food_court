<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#f5f2ee" />
            <stroke
                android:width="1dp"
                android:color="#f4d57d" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
          </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#f9f7f4"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#f4f1ed" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>