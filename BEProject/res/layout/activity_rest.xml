<!-- Registration Form -->
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true"
  android:background="@drawable/restaurant_login"
  >       
        <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          
          android:padding="10dp"
          android:background="#cccccc"
          android:alpha="0.85"
          >
          <!-- Owner Name Label -->
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Owner Name"
                />
          
          <EditText android:id="@+id/rest_ownername"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:inputType="textPersonName"
                 android:textColor="#000000"
                 
                android:layout_marginBottom="20dip"/>
          
          <!-- Phone Number Label -->
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:textColor="#000000"
                android:text="Phone number"/>
          <EditText android:id="@+id/rest_phonenumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:inputType="phone"
                android:maxLength="10"
                 android:textColor="#000000"
                android:hint="10 digit mobile number"
                android:layout_marginBottom="20dip"/>
          
         
          
          <!--  Email Label -->
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Email"/>

          <EditText
              android:id="@+id/rest_email"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="20dip"
              android:layout_marginTop="5dip"
               android:textColor="#000000"
              android:fadingEdge="horizontal"
              android:hint="abc@xyz.com"
              android:inputType="textWebEmailAddress"
              android:singleLine="true" />
          
           <TextView
        android:id="@+id/restaurantSignUpPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Enter  Password :" />

    <EditText
        android:id="@+id/restaurantSignupPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="16"
        android:hint="Password"
         android:textColor="#000000"
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/restaurantSignUpConfirmPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textColor="#000000"
        android:text="Confirm  Password :" />

    <EditText
        android:id="@+id/restaurantSignUpConfirmPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="16"
        android:textColor="#000000"
        android:hint="Confirm Password"
        android:inputType="textPassword" />
          
           <!-- Restaurant Name Label -->
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
              android:textColor="#000000"
                android:text="Restaurant Name"/>
          <EditText android:id="@+id/rest_restaurantname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:inputType="text"
               android:textColor="#000000"
                android:layout_marginBottom="20dip"/>
          
          <!-- Location Label -->
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               android:textColor="#000000"
                android:text="Restaurant Location"/>
          
          <EditText android:id="@+id/rest_locationname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:textColor="#000000"
                android:inputType="textPostalAddress"
                
                android:layout_marginBottom="20dip"
                />
          
          
          
          <!-- Register Button -->

          <TextView
			  android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textColor="#000000"
              android:text="Speciality :" />

          <EditText
              android:id="@+id/rest_speciality"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:ems="16"
              android:textColor="#000000"
              android:inputType="textPersonName" >

              
          </EditText>

          <Button android:id="@+id/buttonPaymentProceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dip"
                android:text="Proceed to Payment"
                android:background="@drawable/stylish"
        
        		android:textColor="#41220b"
        		android:textStyle="bold"
        		 />
          
          <!-- Link to Login Screen 
          <TextView android:id="@+id/link_to_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dip"
                android:layout_marginBottom="40dip"
                android:text="Already has account! Login here"
                android:gravity="center"
                android:textSize="20dip"
                android:textColor="#025f7c"/>
 		-->
        </LinearLayout>
 </ScrollView>
        <!-- Registration Form Ends -->