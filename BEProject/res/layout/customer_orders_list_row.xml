<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="15dp"
    android:paddingRight="8dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    
    android:background="@drawable/customshapeforcustomertableorder" >

   <TableLayout
       android:id="@+id/main_table"
       android:layout_width="match_parent"
       android:layout_height="66dp"
       android:layout_alignParentLeft="true"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:paddingTop="15dp"
       android:stretchColumns="0,1" >

    </TableLayout>
    
	<TextView
	    android:id="@+id/customerItemNamestextView"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="TextView" />
	
	<LinearLayout 
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layout_marginTop="5dp">

		<TextView
		    android:layout_width="0dp"
        	android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:text="Total Amount" />

		<TextView
		    android:id="@+id/customerTotalAmountTextView"
		    android:layout_width="0dp"
            android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:text="TextView" />
	    
	</LinearLayout>
	<LinearLayout 
	   android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layout_marginTop="5dp">

		<TextView
		    android:layout_width="0dp"
        	android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:text="Restaurant Name:" 
		    />

		<TextView
		    android:id="@+id/customerRestaurantNameTextView"
		    android:layout_width="0dp"
        	android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:text="TextView" 
		    android:textColor="#4169E1"/>
	    
	</LinearLayout>

	

	

<LinearLayout 
	    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layout_marginTop="5dp"
    	>
	
	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="0dp"
        android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:text="Order Id" />

	<TextView
	    android:id="@+id/customersOrderIdTextView"
	    android:layout_width="0dp"
        android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:text="TextView" />
</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layout_marginTop="5dp"
    	>
<TextView
    android:id="@+id/textView2"
    android:layout_width="0dp"
        android:layout_weight="1"
    android:layout_height="wrap_content"
    android:text="Type Of Payment" />

<TextView
    android:id="@+id/customerTypeOfPaymentTextView"
    android:layout_width="0dp"
        android:layout_weight="1"
    android:layout_height="wrap_content"
    android:text="TextView" />
</LinearLayout>
<LinearLayout 
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    android:layout_marginTop="5dp"
    	>

		<TextView
		    android:layout_width="0dp"
        android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:text="Order Date" />

		<TextView
		    android:id="@+id/customerOrderDateTextView"
		    android:layout_width="0dp"
        android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:text="TextView" />
		
		<TextView
	    android:id="@+id/customerOrderTimeTextView"
	    android:layout_width="0dp"
        android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:text="textview" />
		
	</LinearLayout>

</LinearLayout>