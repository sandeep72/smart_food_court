<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:layout_height="match_parent" 
android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
android:paddingRight="10dp"
android:paddingLeft="10dp"
android:orientation="vertical"
android:background="@drawable/customshape"


>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
     android:weightSum="4"
     android:layout_marginTop="10dp"
    >
    
<LinearLayout 
    android:layout_height="wrap_content" 
   android:layout_weight="3"
    android:layout_width="0dp"
    android:orientation="vertical"
    >
    <TextView
    android:id="@+id/customerRestaurantListRestaurantNameTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
	
	android:textSize="22dp"
    android:text="TextView1" />
    
    <TextView
    android:id="@+id/customerRestaurantLocationTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:textStyle="italic"
    android:text="TextView" />
</LinearLayout>

<RatingBar
    android:id="@+id/averageRating"
    style="@style/foodRatingBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    
    android:focusableInTouchMode="false"
    android:isIndicator="false"
    android:numStars="5"
    android:layout_marginTop="10dp"
    android:stepSize="0.1"/>
</LinearLayout>

<LinearLayout 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="right"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/button3"
        android:layout_width="40dp"
        android:layout_height="36dp"
       
        android:background="#ffffff"
        
        android:scaleType="fitXY"
        android:src="@drawable/review_icon"
        android:text="R" 
        android:layout_marginRight="15dp"
        />

    <ImageView
        android:id="@+id/button2"
         android:layout_width="36dp"
        android:layout_height="32dp"
      
        android:background="#ffffff"
        
        android:scaleType="fitXY"
        android:src="@drawable/navigation_icon"
        android:text="N" 
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/button1"
         android:layout_width="36dp"
        android:layout_height="32dp"
        
        android:background="#ffffff"
        
        android:scaleType="fitXY"
        android:src="@drawable/call_icon"
        android:text="CALL" 
        android:layout_marginRight="15dp"/>
    
</LinearLayout>

<LinearLayout 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent"
    android:orientation="horizontal">
<TextView
    android:id="@+id/customerRestaurantEmailTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    
    android:text="" />

<TextView
    android:id="@+id/customerRestaurantIdTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    
    android:text="TextView" />



<TextView
    android:id="@+id/customerRestaurantPhoneNumberTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    
    android:text="TextView4" />




<TextView
    android:id="@+id/customerRestaurantOwnerTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   
    android:text="TextView3" />
</LinearLayout>
</LinearLayout>