<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/customer_main_background"
    >

    <ImageView
        android:id="@+id/restaurantFoodOrder"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/restaurantTableOrder"
        android:layout_alignRight="@+id/restaurantTableOrder"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="32dp"
        android:scaleType="fitXY"
         
        android:alpha="0.70"
        android:background="@drawable/customerhomepagebutton"/>

    <ImageView
        android:id="@+id/restaurantEditMenu"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/restaurantFoodOrder"
        android:layout_alignRight="@+id/restaurantFoodOrder"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="37dp"
        android:scaleType="fitXY"
        
        android:alpha="0.70"
        android:background="@drawable/customerhomepagebutton"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restaurantEditMenu"
        android:layout_centerHorizontal="true"
        android:text="  Edit Menu Card  "
        android:background="#000000"
        android:gravity="center"
        android:alpha="0.60"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restaurantTableOrder"
        android:layout_alignRight="@+id/textView3"
        android:text="   Table Orders   "
        android:background="#000000"
        android:gravity="center"
        android:alpha="1"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restaurantFoodOrder"
        android:layout_alignLeft="@+id/textView2"
        android:text="  Food Orders   "
        android:background="#000000"
        android:gravity="center"
        android:alpha="0.60"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/restaurantTableOrder"
        android:layout_width="220dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:alpha="0.50"
        android:background="@drawable/customerhomepagebutton"
        android:scaleType="fitXY"
         />

</RelativeLayout>