<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:paddingLeft="15dp"
    android:paddingRight="8dp"
    android:orientation="vertical"
    
    android:background="@drawable/customshape"
    >
    <TextView
                android:id="@+id/nameOfReviewtextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#483D8B"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:text="TextView4" />
    
 <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <RatingBar
        android:id="@+id/ratingBarOfIndividualCustomer"
        style="@style/foodRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:isIndicator="false"
        android:numStars="5"
        android:stepSize="0.1" />

    <TextView
        android:id="@+id/dateOfReviewtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="53dp"
        android:text="TextView2" />
    
    </RelativeLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">
    
     <TextView
        android:id="@+id/textView1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="Ambience" 
        android:gravity="center"/>
	<TextView
        android:id="@+id/customerAmbienceTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        
        android:text="TextView" />
     
  </LinearLayout>
  
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">
     
    <TextView
        android:id="@+id/customerTypeOfPaymentTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
         android:gravity="center"
        android:text="Service" />
     <TextView
        android:id="@+id/customerServiceTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        
        android:text="TextView" />
    
   </LinearLayout>  
     
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">  
     <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
         android:gravity="center"
        android:text="Food" />
      <TextView
        android:id="@+id/customerFoodTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        
        android:text="TextView" />
      
    </LinearLayout>  
      
      
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">
     <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
         android:gravity="center"
        android:text="Value For Money" />
     
      <TextView
        android:id="@+id/customerValueForMoneyTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        
        android:text="TextView" />
     
     </LinearLayout>

    <TextView
            android:id="@+id/textOfReviewTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Review Text" 
            android:textStyle="italic"
            android:textSize="18dp"
            android:textColor="#0eafaa"/>

  
    
</LinearLayout>